<p id="notice"><%= notice %></p>

<p>
  <b>Event Name:</b>
  <%= @event.event_name %>
</p>

<p>
  <b>Location:</b>
  <%= @event.street %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description.html_safe %>
</p>

<p>
  <b>How to Sign Up:</b>
  <%= @event.instructions.html_safe %>
</p>

<p>
  <b>Date:</b>
  <%= @event.event_date.strftime("%A, %B %d, %Y") rescue nil%>
</p>

<p>
  <b>Start Time:</b>
  <%= @event.event_time.strftime("%I:%M%p") rescue nil %>
</p>

<p>
  <b>End Time:</b>
  <%= @event.end_time.strftime("%I:%M%p") rescue nil %>
</p>

<p>
  <b>Host Name:</b>
  <%= @event.host_name %>
</p>

<p>
  <b>Host Contact:</b>
  <%= @event.host_contact %>
</p>

<h1>
  <%= link_to 'Sign Me Up!', new_event_attendee_path(@event, @attendee) %>
</h1>

<p>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}" %>
</p>

<% if can? :update, @event %>
  <%= link_to 'Edit', edit_event_path(@event) %>
  <%= link_to 'See Attendee List', event_attendees_path(@event) %>
<% end %>
<%= link_to 'Back', events_path %>
