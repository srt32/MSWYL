<h1>
  <p style="font-size:50px;line-height:1.0" id="notice"><%= notice %></p>
</h1>

<p>
  <b>Event Name:</b>
  <%= @event.event_name %>
</p>

<p>
  <b>Location:</b>
  <%= @event.street %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description.html_safe %>
</p>

<p>
  <b>Date:</b>
  <%= @event.event_date.strftime("%A, %B %d, %Y") rescue nil%>
</p>

<p>
  <b>Start Time:</b>
  <%= @event.event_time.strftime("%I:%M%p") rescue nil %>
</p>

<p>
  <b>End Time:</b>
  <%= @event.end_time.strftime("%I:%M%p") rescue nil %>
</p>

<p>
  <b>Host Name:</b>
  <%= @event.host_name %>
</p>

<p>
  <b>Host Contact:</b>
  <%= @event.host_contact %>
</p>

<%= button_to "Sign Me Up!", new_event_attendee_path(@event, @attendee), :id => "open-contacts-dialog-btn", :class => "inbox-sf-add-btn tip", :method => :get, :style => "background:green" %>

<p>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@event.latitude}%2C#{@event.longitude}" %>
</p>

<% if can? :update, @event %>
  <%= link_to 'Edit', edit_event_path(@event) %>
  <%= link_to 'See Attendee List', event_attendees_path(@event) %>
<% end %>
<%= link_to 'Back', events_path %>
